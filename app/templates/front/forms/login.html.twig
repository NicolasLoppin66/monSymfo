{% extends "base.html.twig" %}

{% block title %}
	Page de login
{% endblock %}

{% block body %}
	<div class="container">
		<h2>Identification</h2>
		<div class="card">
			<div class="card-body">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey }}</div>
				{% endif %}
				<form action="{{ path('login') }}" method="post">
					<div class="form-group">
						<label for="username">Identifiant</label>
						<input type="text" class="form-control" id="username" name="_username" value="{{ lastUsername }}">
					</div>
					<div class="form-group">
						<label for="password">Mot de passe</label>
						<input type="password" class="form-control" id="password" name="_password">
					</div>
					<button type="submit" class="btn btn-sm btn-outline-success">Connexion</button>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
